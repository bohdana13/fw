{
  "compilerOptions": {
    "target": "es6",
    "removeComments": true,
"module": "ESNext",
        "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["mocha", "node"]

  },
   "include": ["src/**/*.ts", "test/**/*.ts"],

  "exclude": [
    "node_modules"
  ],
  "ts-node": {
   "esm": true,
}
}